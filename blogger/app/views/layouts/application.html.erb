<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <p class="flash"><%= flash[:message] %></p>
    <div id="login">
      <% if logged_in? %>
        <%= "Logged in as #{current_user.username}" %>
        <%= link_to '(logout)', logout_path %>
      <% else %>
        <%= link_to '(login)', login_path %>
      <% end %>
    </div>
    <div id="sidebar">
      LALALA
    </div>
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>

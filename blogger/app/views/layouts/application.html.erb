<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="header">
      <div id="login">
        <% if logged_in? %>
          <span id="welcome-message">
            <%= "Welcome, #{current_user.username}" %>
          </span>
          <%= link_to 'logout', logout_path, :class => 'logout' %>
        <% else %>
          <span id="please-login">
            Please login to get started.
          </span>
          <%= link_to 'login', login_path, :class => 'login' %>
        <% end %>
      </div>
    </div>
    <div id="flash-area">
      <span class="flash"><%= flash[:message] %></div>
    </div>
    <div id="sidebar">
      <%= build_navigation %>
    </div>
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>
